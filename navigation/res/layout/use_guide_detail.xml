<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pageindcator="http://schemas.android.com/apk/res/com.telecom.navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_detail_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@drawable/titlebar_bg"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/authentication_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="拍照" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/line_v" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="拍照拍照拍照拍照拍照拍照拍照拍照拍照拍照拍照拍照拍照拍照拍照拍照拍照拍照" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.telecom.view.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        pageindcator:radius="10dip" />

</LinearLayout>